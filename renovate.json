{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["main", "/^release\\/.*/"],
  "enabled": true,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["pep621"],
      "groupName": "Python dependencies"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}

